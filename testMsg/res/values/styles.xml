<?xml version="1.0" encoding="utf-8"?>
<resources>
	<!-- 全屏显示主题-->
	<style name="fullscreen">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowFullscreen">true</item>
	</style>
	
	<!-- 顶部标题样式 -->
	<style name="top_title">
    	<item name="android:textSize">26sp</item>
    	<item name="android:textColor">#ffffff</item>
  	</style>
	
	<style name="text_big">
    	<item name="android:textSize">14dip</item>
    	<item name="android:textColor">#000000</item>
  	</style>
  		<style name="text_big2">
    	<item name="android:textSize">14dip</item>
    	<item name="android:textColor">#ffffff</item>
  	</style>
  		<style name="text_smare">
    	<item name="android:textSize">12dip</item>
    	<item name="android:textColor">#000000</item>
  	</style>
  	 	
  		<style name="text_smare2">
    	<item name="android:textSize">12dip</item>
    	<item name="android:textColor">#ffffff</item>
  	</style>
	<!-- Title样式 -->
	<style name="title_name">
		<item name="android:paddingTop">18dip</item>
		<item name="android:paddingLeft">12dip</item>
		<item name="android:paddingRight">12dip</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textColor">#000000</item>
	</style>
	
	 
	
	<style	name = "transDialog" parent = "android:Theme.Dialog">
		<item name = "android:windowBackground">
			@color/dialog_back 
		</item>
	</style>
	
	<style	name = "transActivity" parent = "android:Theme.Translucent.NoTitleBar">
		<item name = "android:windowBackground">
			@color/dialog_back 
		</item>
	</style>
	
	<!-- LOGIN -->
	<style name="login_edit_layer">
	    <item name="android:orientation">horizontal</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:paddingLeft">5dip</item>
		<item name="android:paddingRight">5dip</item>   
		<item name="android:paddingTop">5dip</item>   
		<item name="android:paddingBottom">5dip</item>   
	</style>
	<style name="login_check_layer">
	    <item name="android:orientation">horizontal</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:paddingLeft">20dip</item>
		<item name="android:paddingRight">20dip</item>   
	</style>
	<style name="login_name">
	    <item name="android:hint">@string/login_name_hint</item>
	    <item name="android:saveEnabled">true</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:background">@color/translucent</item>
	</style>
	<style name="login_password">
	    <item name="android:hint">@string/login_password_hint</item>
	    <item name="android:maxLength">16</item>
	    <item name="android:saveEnabled">true</item>
	    <item name="android:textSize">14sp</item>
	    <item name="android:inputType">textPassword</item>
	    <item name="android:background">@color/translucent</item>
	</style>
	<style name="login_checkbox"  parent="@android:style/Widget.CompoundButton.CheckBox">
	    <item name="android:textColor">@color/black</item>
	    <item name="android:textSize">12sp</item>
	</style>
	
	 
	 
</resources>
